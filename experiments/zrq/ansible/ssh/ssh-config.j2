# Global settings
ForwardAgent yes
ForwardX11   no
PasswordAuthentication no
ServerAliveInterval 60
ServerAliveCountMax 5

# Gateway node.
Host gateway
    User {{ hostvars['gateway'].login }}
    HostName {{ gatewaylist.openstack_servers[0].accessIPv4 }}
    ControlPath ~/.ssh/%r@%h:%p
    ControlMaster auto
    ControlPersist 5m

# Master nodes.
{% for hostname in groups['masters'] %}
Host {{ hostname }}
    User {{ hostvars['gateway'].login }}
    ProxyCommand ssh -W %h:%p -l {{ hostvars['gateway'].login }} -F {{ lookup('env','HOME') }}/.ssh/ansible-config gateway
    ControlPath ~/.ssh/%r@%h:%p
    ControlMaster auto
    ControlPersist 5m

{% endfor %}

# Worker nodes.
{% for hostname in groups['workers'] %}
Host {{ hostname }}
    User {{ hostvars['gateway'].login }}
    ProxyCommand ssh -W %h:%p -l {{ hostvars['gateway'].login }} -F {{ lookup('env','HOME') }}/.ssh/ansible-config gateway
    ControlPath ~/.ssh/%r@%h:%p
    ControlMaster auto
    ControlPersist 5m

{% endfor %}

