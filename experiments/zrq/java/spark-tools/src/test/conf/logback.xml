<configuration>

	<!--+
	    | Enteucha logging.
	    +-->
	<logger name="uk.ac.roe.wfau.aglais">
		<level value="DEBUG"/>
	</logger>

	<logger name="org.apache.hadoop.fs">
		<level value="DEBUG"/>
	</logger>

    <!--+
        | Live test logging to stdout.
        +-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
          <level>DEBUG</level>
        </filter>
        <encoder>
            <!--pattern>%date{ISO8601} %-5level [%thread] [%logger{0}] %message %n</pattern-->
            <pattern>%date{HH:mm:ss.SSS} %-5level %message %n</pattern>
        </encoder>
    </appender>

    <!--+
        | Info logging sent to log file.
        +-->
    <appender name="info-log" class="ch.qos.logback.core.FileAppender">
        <file>target/info.log</file>
        <append>true</append>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
          <level>INFO</level>
        </filter>
        <encoder>
            <pattern>%date{ISO8601} %-5level [%thread] [%logger{0}] %message %n</pattern>
        </encoder>
    </appender>

    <!--+
        | Debug logging sent to log file.
        +-->
    <appender name="debug-log" class="ch.qos.logback.core.FileAppender">
        <file>target/debug.log</file>
        <append>false</append>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
          <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>%date{ISO8601} %-5level [%thread] [%logger{0}] %message %n</pattern>
        </encoder>
    </appender>

    <!--+
        | Trace logging sent to log file.
        +-->
    <appender name="trace-log" class="ch.qos.logback.core.FileAppender">
        <file>target/trace.log</file>
        <append>true</append>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
          <level>TRACE</level>
        </filter>
        <encoder>
            <!--pattern>%date{ISO8601} %-5level [%thread] [%logger{0}] %message %n</pattern-->
            <pattern>%-5level [%logger{0}] %message %n</pattern>
        </encoder>
    </appender>

    <!--+
        | Everything sent to all the loggers.
        +-->
    <root level="ALL">
        <appender-ref ref="console" />
        <appender-ref ref="info-log" />
        <appender-ref ref="debug-log" />
        <appender-ref ref="trace-log" />
    </root>

	<!--+
	    | Spring loggers.
	    +-->
	<logger name="org.springframework">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.core">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.beans">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.context">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.http">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.aop">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.jdbc">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.orm">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.web">
		<level value="INFO" />
	</logger>
	<!--+
	<logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping">
		<level value="WARN" />
	</logger>
	    +-->

	<!--+
	    | Spring scheduling.
	    +-->
	<logger name="org.springframework.scheduling">
		<level value="INFO" />
	</logger>

	<!--+
	    | Spring transactions.
        | http://stackoverflow.com/questions/1965454/spring-transaction-show-in-log
	    +-->
	<logger name="org.springframework.transaction">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.transaction.interceptor">
		<level value="INFO" />
	</logger>

	<!--+
	    | C3PO loggers
	    | Includes strange DEBUG via Exception logging.
	    | http://stackoverflow.com/questions/8403227/weird-error-close-by-client-stack-trace
	    | http://forum.springsource.org/archive/index.php/t-47689.html
	    | https://forum.hibernate.org/viewtopic.php?f=1&t=982410
	    +-->
	<logger name="com.mchange">
		<level value="INFO" />
	</logger>
	<logger name="com.mchange.v2.async">
		<level value="INFO" />
	</logger>
	<logger name="com.mchange.v2.c3p0.impl.C3P0ImplUtils">
		<level value="WARN" />
	</logger>

</configuration>

